# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Max requests per window

# AI Rate Limiting
AI_RATE_LIMIT_MAX=20         # Max AI requests per window

# Downloader Rate Limiting  
DOWNLOADER_RATE_LIMIT_MAX=50 # Max download requests per window

# API Keys (Optional - users provide their own)
# GEMINI_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=info

# Security
HELMET_ENABLED=true

# Compression
COMPRESSION_ENABLED=true

# Maintenance Mode (set to true to enable maintenance page)
MAINTENANCE_MODE=false